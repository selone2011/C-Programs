#include <stdio.h>
void main()
{int i,j,n;
printf("Enter Number: ");
scanf("%d",&n);
for(i=0;i<=(n-1)/2;i++)
{for(j=0;j<(n-1)/2-i;j++)
{printf("  ");}
for(j=0;j<1+i;j++)
{printf("%c ",65+j);}
for(j=0;j<i;j++)
{printf("%c ",64+i-j);}
    printf("\n");
}
for(i=0;i<=(n-1)/2;i++)
{for(j=0;j<i+1;j++)
{printf("  ");}
for(j=0;j<(n-1)/2-i;j++)
{printf("%c ",65+j);}
for(j=-1;j<(n-1)/2-i-2;j++)
{printf("%c ",65+(n-1)/2-i-2-(j+1));}
    printf("\n"); 
}}
