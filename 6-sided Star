#include <stdio.h>
void main()
{int n, i, a;
 printf("Enter number:\n ");
 scanf("%d",&n);   
 for(i=1;i<=n;i++)
 {
     for(a=0;a<=(n-i)+n;a++)
         {printf("  ");}
     for(a=1;a<=i+i-1;a++)
         {printf("* ");}
     printf("\n");
 }
 for(i=0;i<n;i++)
 {
    for(a=0;a<=i;a++) 
         {printf("  ");}
    for(a=1;a<=((2*n)+(2*n-1))-(2*i);a++)
         {printf("* ");}
    printf("\n");
 }
 for(i=0;i<n;i++)
 {
    for(a=0;a<(n-i);a++)
         {printf("  ");}
    for(a=1;a<=(2*n-1)+2+(2*i);a++)
         {printf("* ");}
    printf("\n");
 }
 for(i=0;i<=n;i++)
 {  
    for(a=0;a<n+i+1;a++)
         {printf("  ");}
    for(a=1;a<=2*(n-i)-1;a++)
         {printf("* ");}
    printf("\n");
}}
